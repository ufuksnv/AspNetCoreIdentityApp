@model List<UserViewAdminModel>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UserList</h1>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                <td>@item.UserEmail</td>
                <td>
                    <a asp-controller="Admin" asp-action="AssignRoleToUser" asp-route-id="@item.UserId">Rol ata</a>
                </td>
            </tr>

        }
    </tbody>

</table>

